<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Social_Sport_Hub.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Social_Sport_Hub.Views"
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="True">

    <!-- 🔒 LOGIN ROUTE -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- 🏠 MAIN AUTHENTICATED AREA -->
    <TabBar Route="home">

        <!-- 🏟️ Events Tab -->
        <Tab Title="Events" Icon="ic_games.png">
            <ShellContent
                Route="events"
                ContentTemplate="{DataTemplate views:EventsPage}" />
        </Tab>

        <!-- 🗺️ Map Tab -->
        <Tab Title="Map" Icon="ic_map.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:MapPage}"
                Route="map" />
        </Tab>

        <!-- ✏️ Create Event Tab -->
        <Tab Title="Create" Icon="ic_create.png">
            <ShellContent
                Route="createevent"
                ContentTemplate="{DataTemplate views:CreateEventPage}" />
        </Tab>

        <!-- 👤 Profile Tab -->
        <Tab Title="Profile" Icon="ic_profile.png">
            <ShellContent
                Route="profile"
                ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>
