<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Social_Sport_Hub.ViewModels"
             x:Class="Social_Sport_Hub.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="#FAFAFA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Profile Photo -->
            <Frame WidthRequest="120" HeightRequest="120" 
                   CornerRadius="60"
                   Padding="0"
                   HorizontalOptions="Center"
                   HasShadow="True"
                   BorderColor="#6C63FF">
                <Image Source="{Binding ProfilePhotoPath}"
                       Aspect="AspectFill">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PickPhotoCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Frame>

            <Label Text="Tap photo to change"
                   FontSize="12"
                   TextColor="#888"
                   HorizontalOptions="Center"/>

            <!-- Profile Details -->
            <Frame BackgroundColor="White" CornerRadius="20" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Profile Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#222"/>

                    <Label Text="Display Name" FontSize="14" TextColor="#666"/>
                    <Entry Text="{Binding DisplayName}" 
                           Placeholder="Enter your name"
                           FontSize="16"/>

                    <Label Text="Email" FontSize="14" TextColor="#666"/>
                    <Label Text="{Binding Email}" 
                           FontSize="16"
                           TextColor="#333"/>

                    <Label Text="Phone Number" FontSize="14" TextColor="#666"/>
                    <Entry Text="{Binding PhoneNumber}" 
                           Placeholder="Enter phone number"
                           Keyboard="Telephone"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Preferred Sports -->
            <Frame BackgroundColor="White" CornerRadius="20" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Preferred Sports" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#222"/>

                    <HorizontalStackLayout Spacing="10">
                        <Picker ItemsSource="{Binding AvailableSports}"
                                SelectedItem="{Binding SelectedSport}"
                                Title="Select Sport"
                                HorizontalOptions="FillAndExpand"
                                FontSize="16"/>
                        <Button Text="Add"
                                Command="{Binding AddSportCommand}"
                                BackgroundColor="#6C63FF"
                                TextColor="White"
                                WidthRequest="80"
                                CornerRadius="10"/>
                    </HorizontalStackLayout>

                    <CollectionView ItemsSource="{Binding PreferredSports}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,5" 
                                       Padding="15,10" 
                                       BackgroundColor="#F0F0F0" 
                                       CornerRadius="10"
                                       HasShadow="False">
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{Binding .}" 
                                               VerticalOptions="Center"
                                               FontSize="16"
                                               HorizontalOptions="FillAndExpand"/>
                                        <Button Text="âœ•"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProfileViewModel}}, Path=RemoveSportCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#FF6B6B"
                                                TextColor="White"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                CornerRadius="20"
                                                Padding="0"
                                                FontSize="16"/>
                                    </HorizontalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="Save Profile"
                    Command="{Binding SaveProfileCommand}"
                    BackgroundColor="#6C63FF"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="55"/>

            <!-- Logout Button -->
            <Button Text="Logout"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="#FF6B6B"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="55"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               IsVisible="{Binding IsBusy}"
                               Color="#6C63FF"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>