<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialSports.Maui.Views.CreateEventPage"
             Title="Create">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry Placeholder="Title" Text="{Binding Title}" />
            <Picker Title="Sport" SelectedItem="{Binding Sport}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Soccer</x:String>
                        <x:String>Basketball</x:String>
                        <x:String>Cricket</x:String>
                        <x:String>Tennis</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <DatePicker Date="{Binding StartTime}" />
            <TimePicker Time="{Binding StartTime, Mode=TwoWay}" />
            <Entry Placeholder="Capacity" Keyboard="Numeric" Text="{Binding Capacity}" />
            <Entry Placeholder="Location" Text="{Binding LocationName}" />
            <Button Text="Create Event" Command="{Binding CreateCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
